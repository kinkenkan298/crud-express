model Mahasiswa {
  id_mahasiswa String   @id @default(auto()) @map("_id") @db.ObjectId
  nim          String   @unique
  nama         String
  jurusan      String
  email        String?  @unique
  createAt     DateTime @default(now())
  updateAt     DateTime @updatedAt
}
